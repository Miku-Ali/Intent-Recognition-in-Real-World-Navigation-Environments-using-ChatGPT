import googlemaps
from datetime import datetime

def get_route(api_key, origin, destination):
    # Create a client
    gmaps = googlemaps.Client(key=api_key)

    # Request directions
    now = datetime.now()
    directions_result = gmaps.directions(origin,
                                         destination,
                                         mode="driving",
                                         departure_time=now)
    
    # Check if the API returned directions
    if directions_result:
        # Print the steps in the directions
        for step in directions_result[0]['legs'][0]['steps']:
            print(step['html_instructions'])

        # Optionally, return the full directions result
        return directions_result
    else:
        print("No route could be found between the specified points.")
        return None

# Replace 'YOUR_API_KEY' with your actual API key
api_key = 'AIzaSyCFfNMPGWRnN8OF5fvnPa_ZnChdvjwqOXc'

# Replace with your origin and destination
origin = "Times Square, Manhattan, NY, USA"
destination = "Metropolitan Museum of Art, New York, NY, USA"

# Call the function with your API key, origin, and destination
route = get_route(api_key, origin, destination)
